<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>MiSpotify</title>
</head>

{% block body %}
<style>
    img{
        width:120px;
        height:120px;

    }

    body{
        background-color:grey;


    }

    footer{
        background-color:black;
        color:white;
        margin:10%;
        display: flex;
        flex-direction: column;
        width:100vh;
        position:relative;
        right:20%;


    }

    div.contenido{
        position:relative;
        left:110%;
        margin-top: -80%;
        padding-top: 20%;
 }

     .navbar {
            background-color: #333;
            width: 250px;
            min-height: 100vh;
            padding: 2rem 0;
            font-family: Arial, sans-serif;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .nav-item {
            width: 100%;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            padding: 1rem 2rem;
            display: block;
            transition: background-color 0.3s;
        }

        .nav-item a:hover {
            background-color: #555;
        }

        /* Área principal de contenido */
        .main-content {
            flex: 1;
            padding: 2rem;
        }

        .navbarInicio{
             background-color: #093900;
  padding: 20px;
  text-align: center; /* Centra el contenido de texto */
  display: flex;
  flex-direction: column;
  align-items: center; /* Centra los elementos flex horizontalmente */

        }

        /* Estilos responsivos */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }
            
            .navbar {
                width: 100%;
                min-height: auto;
            }

            .nav-list {
                align-items: center;
            }

            .nav-item {
                width: 90%;
                text-align: center;
            }
        }

         .buscador-container {
  margin: 15px auto;
  display: flex;
  justify-content: center; /* Centra horizontalmente el input y botón */
  width: 100%;
  max-width: 600px; /* Limita el ancho máximo */
}

#inputBuscador {
  padding: 8px;
  border-radius: 4px 0 0 4px;
  border: none;
  flex-grow: 1; /* Hace que el input ocupe el espacio disponible */
  max-width: 70%; /* Limita el ancho en pantallas grandes */
}

#botonBuscar {
  padding: 8px 15px;
  background-color: #1DB954; /* Color verde de Spotify */
  color: white;
  border: none;
  border-radius: 0 4px 4px 0;
  cursor: pointer;
}

/* Estilos responsivos adicionales */
@media (max-width: 768px) {
  .buscador-container {
    flex-direction: row; /* Mantiene el input y botón en línea */
    width: 90%; /* Ajusta el ancho en dispositivos pequeños */
  }
}


    


 
        
</style>

<div class="navbarInicio">
  <h1>MiSpotify</h1>
  <div class="buscador-container">
    <input type="text" id="inputBuscador" placeholder="Buscar canciones o playlists...">
    <button id="botonBuscar">Buscar</button>
  </div>




<nav class="navbar">
        <ul class="nav-list">
            <li class="nav-item"><a href="/playlist/todas">Playlists</a></li>
            <li class="nav-item"><a href="/paginaprincipal">Canciones</a></li>
        </ul>

<div class="Contenido">
<h1>Tus playlists</h1>



{% for playlist in playlists %}
<p>Playlist</p>
<p>{{playlist.nombre}}</p>
<button onclick="window.location.href='{{ path('playlist_canciones', {'id': playlist.id}) }}'">Pulsar </button>
<br><br>

{% endfor %}



<footer>
<h1>Jesus Reinaldo</h1>
<p> &#169 MiSpotify-Todos los derechos reservados</p>

</footer>


</div>
{% endblock %}
